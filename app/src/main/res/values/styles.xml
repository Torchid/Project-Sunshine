<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary" tools:targetApi="lollipop">@color/sunshine_light_blue</item>
        <item name="colorPrimaryDark" tools:targetApi="lollipop">@color/sunshine_dark_blue</item>
    </style>

    <style name="ForecastTheme" parent="AppTheme">
        <item name="android:actionBarStyle" tools:targetApi="honeycomb">@style/ActionBar.Solid.Sunshine.NoTitle</item>
    </style>

    <style name="ActionBar.Solid.Sunshine.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:displayOptions" tools:targetApi="honeycomb">useLogo|showHome</item>
        <item name="logo">@drawable/ic_logo</item>
    </style>

    <style name="AppTheme.ForecastListStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:choiceMode">none</item>
    </style>

</resources>
